# Stage 1: Build Quasar SPA
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (ignoring scripts to avoid missing file errors)
RUN npm install -g @quasar/cli
RUN npm install --ignore-scripts

# Copy the rest of the application code
COPY . .

# Run postinstall script (quasar prepare) now that all files are present
RUN npm run postinstall

# Accept VITE_API_URL from build-args
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

# Build the application
RUN npx quasar build -m spa

# Stage 2: Production (Nginx serve static files)
FROM nginx:1.27-alpine

# Copy build artifacts from stage 1
COPY --from=builder /app/dist/spa /usr/share/nginx/html

# Expose port
EXPOSE 80

# Run Nginx
CMD ["nginx", "-g", "daemon off;"]